<%= form_for [@location, @event] do |f| %>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :description %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.text_field :description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :date %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.date_select :date, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :requires_id, 'Requires ID' %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.check_box :requires_id, class: "form-control" %>
  </div>
</div>


<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class: "btn btn-primary" %>
      <a class= "btn btn-default" href= "/locations">Cancel</a>
      <% if @event.id != nil %>
      <a class= "btn btn-danger" <%= link_to 'Delete', location_event_path(@location, @event), method: :delete, data: { confirm: 'Are you sure?'} %></a>
      <% end  %>
    </div>
  </div>
</div>


<% end %>
