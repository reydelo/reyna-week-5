<body>

  <div class="container">
    <div class="page-header">
      <div class="pull-right">
        <a class="btn btn-info"<%= link_to 'New Location', new_location_path %>
      </div>
      <h1>Event Venues</h1></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Adress</th>
      <th>Zip Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |l| %>
      <tr>
        <td><%= link_to l.name, location_path(l) %></td>
        <td><%= l.address %></td>
        <td><%= l.zipcode %></td>
        <td class="text-right"><%= link_to 'Edit', edit_location_path(l), class: "btn btn-info" %>
        <a class="btn btn-danger"<%= link_to 'Delete', l, method: :delete, data: { confirm: 'Are you sure?'} %>
          <a class="btn btn-info"<%= link_to 'New Event', new_location_event_path(l)  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
</body>
