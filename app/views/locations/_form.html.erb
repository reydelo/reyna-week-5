<%= form_for(@location, html: {class: "form-horizontal"}) do |f| %>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :name %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :address %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.text_field :address, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :zipcode %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.number_field :zipcode, class: "form-control" %>
  </div>
</div>


<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class: "btn btn-primary" %>
      <a class= "btn btn-default" href= "/locations">Cancel</a>
      <% if @location.id != nil %>
      <a class= "btn btn-danger" <%= link_to 'Delete', @location, method: :delete, data: { confirm: 'Are you sure?'} %></a>
      <% end  %>
    </div>
  </div>
</div>


<% end %>
